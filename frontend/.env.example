# =============================================================================
# Collab Notes Frontend - Environment Variables
# =============================================================================
# Copy this file to .env for local development
# For production, set these variables in your deployment platform
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Configuration
# -----------------------------------------------------------------------------
# Options: development, staging, production
VITE_ENV=development

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL (without trailing slash)
# Development: http://localhost:3000
# Staging: https://api-staging.collabnotes.com
# Production: https://api.collabnotes.com
VITE_API_BASE_URL=http://localhost:3000

# WebSocket server URL (without trailing slash)
# Development: http://localhost:3000
# Staging: https://socket-staging.collabnotes.com or wss://socket-staging.collabnotes.com
# Production: https://socket.collabnotes.com or wss://socket.collabnotes.com
VITE_SOCKET_URL=http://localhost:3000

# API request timeout in milliseconds
VITE_API_TIMEOUT=10000

# -----------------------------------------------------------------------------
# OAuth Configuration
# -----------------------------------------------------------------------------
# Google OAuth 2.0 Client ID
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Microsoft OAuth 2.0 Client ID
# Get from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable AI features
VITE_ENABLE_AI_FEATURES=true

# Enable/disable whiteboard features
VITE_ENABLE_WHITEBOARD=true

# Enable/disable OAuth login
VITE_ENABLE_OAUTH=true

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application name displayed in UI
VITE_APP_NAME=Collab Notes

# Auto-save debounce delay in milliseconds
VITE_AUTOSAVE_DELAY=500

# WebSocket reconnection attempts
VITE_SOCKET_RECONNECT_ATTEMPTS=5

# WebSocket reconnection delay in milliseconds
VITE_SOCKET_RECONNECT_DELAY=3000

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------
# Google Analytics Measurement ID
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Enable performance monitoring
# VITE_ENABLE_PERFORMANCE_MONITORING=false

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Enable debug mode (shows additional console logs)
VITE_DEBUG=false

# Enable React DevTools in production
VITE_ENABLE_DEVTOOLS=false

# -----------------------------------------------------------------------------
# Mock Backend Configuration
# -----------------------------------------------------------------------------
# Enable mock backend (for development without real backend)
# Set to 'true' to use dummy data and mock API responses
# Set to 'false' to use real backend API
VITE_USE_MOCK_BACKEND=true
